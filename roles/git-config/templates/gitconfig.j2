[alias]
	b = branch
	bl = branch -l
	blr = branch -l -r
	co = checkout
	cp = cherry-pick
	dd = difftool -d
	dds = difftool -d --cached
	df = difftool -y
	dfs = difftool -y --cached
	f = fetch -p
	mt = mergetool
	rbc = rebase --continue
	st = status

[core]
	editor = nvim -f

[diff]
	tool = bc3

[difftool "bc3"]
	path = c:/Program Files/Beyond Compare 4/BComp.exe

[merge]
	tool = bc3

[mergetool "bc3"]
	path = C:/Program Files/Beyond Compare 4/BComp.exe

[user]
	name = {{ git_username_personal }}
	email = {{ git_email_personal }}
    
[pull]
	rebase = true

[includeIf "gitdir:{{ git_dir }}/work/"]
    path = {{ git_dir }}/work/.gitconfig

